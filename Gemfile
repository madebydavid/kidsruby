# A sample Gemfile
source "http://rubygems.org"

gem 'rubywarrior-i18n'

group :development do
  gem 'guard'
  gem 'guard-shell'
  gem 'rb-inotify', :require => false
  gem "rb-fsevent", "~> 0.9.3", :require => false
  gem 'rb-fchange', :require => false
  gem 'compass'
end

group :test do
  # only needed for testing
  gem 'rake'
  gem 'minitest'
  gem 'mocha'
end

# needed for gosu
gem 'gosu'
